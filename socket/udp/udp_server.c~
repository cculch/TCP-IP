#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <arpa/inet.h>
#include <errno.h>
#include <netdb.h>
#include <stdarg.h>

#define Ser_Port 8002

int main(int argc, char* argv[]){
	struct sockaddr_in info;
	int sock_fd, byte_recv, client_info_len;
	char buffer[50];
	int info_len = sizeof(info);

	sock_fd = socket(AF_INET, SOCK_DGRAM, 0);
	if(sock_fd == -1){
		printf("Fail to create a socket!\n");
		exit(1);
	}

	bzero(&info, sizeof(info));
	info.sin_family = AF_INET;
	info.sin_port = htons(Ser_Port);
	info.sin_addr.s_addr = htonl(INADDR_ANY);

	if(bind(sock_fd, (struct sockaddr*)&info, sizeof(info)) == -1){
		printf("Fail to bind!\n");
		close(sock_fd);
		exit(1);
	}
	while(1){
		printf("Listening!\n");
		struct sockaddr_in client_info;
		socklen_t client_info_len = sizeof(client_info); 
		bzero(buffer, 50);
		if(recvfrom(sock_fd, buffer, 50, 0, (struct sockaddr*)&client_info, &client_info_len) == -1){
			//printf("Receive data fail!\n");
		}
		else{
			printf("Receive data:\n");
			char file_name[50]; 
			bzero(file_name,50); 
			strncpy(file_name, buffer, 50); 
			printf("%s\n", file_name); 
			break;
		}
	}
	return 0;

}
