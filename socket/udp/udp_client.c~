#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <arpa/inet.h>

#define Ser_Port 20000
#define Ser_Addr "127.0.0.1"

int main(int argc, char* argv[]){
	struct sockaddr_in info;
	int sock_fd, byte_sent;
	char buffer[6]="hello\0";

	sock_fd = socket(AF_INET, SOCK_DGRAM, 0);
	if(sock_fd == -1){
		printf("Fail to create a socket!\n");
	}

	bzero(&info, sizeof(info));
	info.sin_family = AF_INET;
	info.sin_port = htons(Ser_Port);
	info.sin_addr.s_addr = inet_addr(Ser_Addr);

	byte_sent = sendto(sock_fd, buffer, sizeof(buffer), 0, (struct sockaddr*)&info, sizeof(info));
	if(byte_sent < 0){
		printf("Fail to send a packet!\n");
	}
	close(sock_fd);
	return 0;
}
